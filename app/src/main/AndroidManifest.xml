<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itechhubsa.bimanage">
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Login">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".UserRegistration" />

        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ChartBoard" />

        <activity
            android:name=".Electricity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Plumbing"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Carpentry"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Report"
            android:label="Report"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Capture"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity android:name=".AppVersion"
            android:theme="@android:style/Theme.Dialog"/>

        <activity android:name=".AboutUs"
            android:theme="@android:style/Theme.Dialog"/>
    </application>
</manifest>