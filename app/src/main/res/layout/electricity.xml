<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.itechhubsa.bimanage.Electricity">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Electrical appliances"
        android:layout_gravity="top|center"
        android:textSize="32sp"
        android:textColor="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/my_buttons"
                android:text="Lights and Switches"
                android:id="@+id/imgBtnLightSwitch" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="electrical Sockets"
                android:background="@drawable/my_buttons"
                android:id="@+id/btnElectricalSockets"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/my_buttons"
                android:text="Electronics"
                android:id="@+id/btnElectronics"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/my_buttons"
                android:id="@+id/btnElectricityOther"
                android:text="other"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
</LinearLayout>
